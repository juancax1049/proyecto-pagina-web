<div class="row center-xs">
  <div class="col-xs-8 col-md-6">
    <div class="box text-left">

				<h1><%= name %> Articulo</h1>
			<%= form_for(@article) do |f| %>
			<% @article.errors.full_messages.each do |message| %>
			<div class="be-red white top-space">
				* <%= message %>
			</div>
			<%end%>
			<div class="field">
			<%= f.text_field :nombre, placeholder: "Nombre", class:"form-control"%>
			</div>
			<div class="field">
			<%= f.text_field :marca, placeholder: "marca", class:"form-control" %>
			</div>
			<div class="field">
			<%= f.text_field :tipo, placeholder: "tipo", class:"form-control" %>
			</div>
			<div class="field">
			<%= f.text_area :descripcion, placeholder: "descripcion", style: "height:125px;", class:"form-control" %>
			</div>
			<div class="field">
			<%= f.submit "Guardar", class:"btn be-red white" %>
			</div>
			<%end%>
    </div>
  </div>
</div>